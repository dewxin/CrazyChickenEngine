<UserControl x:Class="PerfCounterViewer.User_Controls.DomainInfoBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PerfCounterViewer.User_Controls"
             mc:Ignorable="d" 
             >
    <Border Background="GhostWhite" BorderBrush="Silver" BorderThickness="1" CornerRadius="8,8,3,3">
        <StackPanel>
            <Label Name="domainName">DomainName</Label>

            <StackPanel Name="counterPanel" Loaded="counterPanel_Loaded">
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
